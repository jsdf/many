{
  "name": "many",
  "version": "1.0.0",
  "description": "Use git worktrees with AI tools",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "git",
    "worktree",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "simple-git": "^3.20.0"
  },
  "build": {
    "appId": "com.many.app",
    "productName": "Many",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "src/logo.png",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "src/logo.png"
    },
    "linux": {
      "icon": "src/logo.png",
      "category": "Development"
    }
  }
}
