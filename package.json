{
  "name": "many",
  "version": "1.0.0",
  "description": "Use git worktrees with AI tools",
  "type": "module",
  "main": "dist-electron/main/index.cjs",
  "scripts": {
    "start": "npm run build && electron dist-electron/main/index.cjs",
    "dev": "pkill -f 'node build.js --dev --watch' 2>/dev/null || true && node build.js --dev --watch & electron dist-electron/main/index.cjs --dev",
    "build": "tsc --noEmit && node build.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "logs": "node view-logs.js",
    "test": "npm run build && npx playwright test",
    "test:ui": "npm run build && npx playwright test --ui"
  },
  "keywords": [
    "electron",
    "git",
    "worktree",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.19.12",
    "playwright": "^1.54.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "electron-trpc": "^0.7.1",
    "simple-git": "^3.20.0",
    "zod": "^4.0.14"
  },
  "build": {
    "appId": "com.many.app",
    "productName": "Many",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "public/many-shodan.png",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "public/many-shodan.png"
    },
    "linux": {
      "icon": "public/many-shodan.png",
      "category": "Development"
    }
  }
}
